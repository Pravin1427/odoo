<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">appointment.appointment.tree</field>
        <field name="model">appointment.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">appointment.appointment.form</field>
        <field name="model">appointment.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>
                        <div class="alert alert-info">
                            No fields defined yet.
                        </div>    

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_appointment_app" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">appointment.appointment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_appointment_root"
              name="Appointment App"
              sequence="10"
              web_icon="appointment,static/description/icon.png"/>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_appointment_root"
              action="action_appointment_app"/>
</odoo>
